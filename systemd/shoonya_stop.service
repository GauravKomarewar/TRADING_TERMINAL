[Unit]
Description=Shoonya Platform Stop Service
Documentation=Stops shoonya trading platform with proper cleanup

[Service]
Type=oneshot
User=ec2-user
WorkingDirectory=/home/ec2-user/shoonya_platform
ExecStart=/usr/bin/systemctl stop shoonya_service.service
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
