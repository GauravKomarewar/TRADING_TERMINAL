[Unit]
Description=Shoonya Weekend Market Activity Detector
Documentation=Detects market activity on weekends and starts service if active
After=network.target

[Service]
Type=oneshot
User=ec2-user
WorkingDirectory=/home/ec2-user/shoonya_platform
ExecStart=/home/ec2-user/shoonya_platform/venv/bin/python /home/ec2-user/shoonya_platform/weekend_market_check.py
StandardOutput=journal
StandardError=journal
TimeoutSec=1800

[Install]
WantedBy=multi-user.target
